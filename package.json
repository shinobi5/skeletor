{
  "name": "skeletor",
  "version": "0.0.0",
  "description": "Front-end boilerplate for static and single page web app development",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinobi5/skeletor"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shinobi5/skeletor/issues"
  },
  "keywords": [
    "boilerplate",
    "web",
    "components",
    "custom",
    "elements",
    "shadow",
    "dom"
  ],
  "dependencies": {
    "beedle": "^0.8.1",
    "haunted": "^4.5.4",
    "lit-html": "^1.1.0",
    "router-component": "^0.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@pika/web": "^0.4.3",
    "clean-css-cli": "^4.2.1",
    "fs-extra": "^8.0.1",
    "glob": "^7.1.3",
    "hankey": "^0.0.3",
    "http-server": "^0.11.1",
    "husky": "^2.4.1",
    "imagemin-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.0",
    "prompt": "^1.0.0",
    "rollup": "^1.19.4",
    "slash": "^2.0.0",
    "uglify-es": "^3.3.9"
  },
  "scripts": {
    "babel": "npx babel src -out-dir build --copy-files",
    "build": "yarn css:concat && yarn css:minify && node scripts/copy.js",
    "build:babel": "yarn css:concat && yarn css:minify && yarn babel",
    "build:bundle": "yarn build && rollup -c && npx babel build --out-dir build",
    "clean:modules": "rm -rf node_modules src/js/web_modules",
    "clean:build": "rm -rf build",
    "clean": "yarn clean:build && yarn clean:modules",
    "create-component": "node scripts/create-component.js",
    "css:concat": "cat src/css/settings/* src/css/global/* src/css/elements/* src/css/components/* src/css/utilities/* > src/styles.css",
    "css:minify": "cleancss -o src/styles.css src/styles.css",
    "css:watch": "onchange 'src/css/**/*' -- yarn css:concat",
    "imagemin": "imagemin --out-dir=src/img src/img/**/*.{png,jpg,gif}",
    "prepare": "pika-web --dest src/js/web_modules --clean --optimize",
    "prettier:watch": "onchange '**/*.js' '**/*.css' -- prettier --write {{changed}}",
    "start-server:dev": "http-server ./src -p 1234",
    "start-server:build": "http-server ./build -p 1234",
    "start": "yarn css:concat && npm-run-all --parallel prettier:watch css:watch start-server:dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
