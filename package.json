{
  "name": "skeletor",
  "version": "0.0.0",
  "description": "Front-end boilerplate for static and single page app web development",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinobi5/skeletor"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shinobi5/skeletor/issues"
  },
  "keywords": [
    "boilerplate",
    "web",
    "components",
    "custom",
    "elements",
    "shadow",
    "dom"
  ],
  "dependencies": {
    "@babel/runtime": "^7.6.3",
    "beedle": "^0.8.1",
    "haunted": "^4.5.4",
    "lit-html": "^1.1.0",
    "redux": "^4.0.4",
    "router-component": "^0.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.4.5",
    "@pika/web": "^0.4.3",
    "babel-loader": "^8.0.6",
    "clean-css-cli": "^4.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "fs-extra": "^8.0.1",
    "glob": "^7.1.3",
    "hankey": "^0.0.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.1",
    "imagemin-cli": "^4.0.1",
    "imagemin-webpack-plugin": "^2.4.2",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.0",
    "prompt": "^1.0.0",
    "slash": "^2.0.0",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "scripts": {
    "babel": "npx babel src -d build --copy-files",
    "build": "yarn css:concat && yarn css:minify && yarn imagemin && node scripts/copy.js",
    "build:babel": "yarn css:concat && yarn css:minify && yarn imagemin && yarn babel",
    "build:webpack": "yarn css:concat && yarn css:minify && webpack --config config/webpack.prod.js",
    "clean": "yarn clean:build && rm -rf node_modules",
    "clean:build": "rm -rf build",
    "create-component": "node scripts/create-component.js",
    "css:concat": "cat src/css/settings/* src/css/global/* src/css/elements/* src/css/components/* src/css/utilities/* > src/styles.css",
    "css:minify": "cleancss -o src/styles.css src/styles.css",
    "css:watch": "onchange 'src/css/**/*' -- yarn css:concat",
    "imagemin": "imagemin --out-dir=src/img src/img/**/*.{png,jpg,gif}",
    "prepare": "pika-web --dest src/js/modules --clean --optimize",
    "prettier:watch": "onchange '**/*.js' '**/*.css' -- prettier --write {{changed}}",
    "server:dev": "live-server --open=src",
    "server:build": "live-server --open=build",
    "server:webpack": "webpack-dev-server --open --config config/webpack.dev.js",
    "start": "yarn css:concat && npm-run-all --parallel prettier:watch css:watch server:dev",
    "start:webpack": "yarn css:concat && npm-run-all --parallel prettier:watch css:watch server:webpack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
