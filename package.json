{
  "name": "skeletor",
  "version": "0.0.0",
  "description": "Front-end boilerplate",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/shinobi5/skeletor"
  },
  "license": "MIT",
  "dependencies": {
    "lit-html": "^1.1.0"
  },
  "devDependencies": {
    "clean-css-cli": "^4.2.1",
    "glob": "^7.1.3",
    "hankey": "^0.0.3",
    "imagemin-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "1.17.0",
    "prompt": "^1.0.0",
    "slash": "^2.0.0"
  },
  "scripts": {
    "build": "yarn css:minify && yarn parcel:build",
    "build:component": "node scripts/create-component.js",
    "build:registry": "node scripts/build-registry.js",
    "clean": "rm -rf node_modules dist .cache",
    "create-component": "yarn build:component && yarn build:registry",
    "css:concat": "cat src/css/settings/* src/css/global/* src/css/elements/* src/css/objects/* src/css/utilities/* > src/styles.css",
    "css:minify": "cleancss -o src/styles.css src/styles.css",
    "css:watch": "onchange 'src/css/**/*' -- yarn css:concat",
    "imagemin": "imagemin --out-dir=src/img src/img/**/*.{png,jpg,gif}",
    "parcel:start": "parcel src/index.html",
    "parcel:build": "parcel build src/index.html",
    "setup": "rm -rf .editorconfig && yarn && yarn start",
    "start": " yarn css:concat && npm-run-all --parallel css:watch parcel:start"
  }
}
